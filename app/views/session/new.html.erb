<% provide(:title ,"login")%>
<h1>登入</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, "信箱"%>
        <%= f.email_field :email %>

        <%= f.label :password ,"密碼" %>
        <%= f.password_field :password %>

        <%= f.submit "登入", class: "btn btn-primary" %>
      <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>